!
      include     'i_param.inc'
!
      integer(kind=ck_mode_t),intent(in)  :: ioct 
      character(len=*),intent(inout)      :: str 
!
      external    c_utils_oct2fup 
!
!     777   --> rwxrwxrwx
!
      call c_utils_oct2fup ( ioct, str ) 
      str(15:) = '' 
!
      return 
      end subroutine  funx_oct2fup
