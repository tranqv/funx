!
!     FUP:  Fully Unix Permission 
!
!     str = 'drwxrwxrwx UGS'
!            123456789|||||
!                    10||||
!                     11|||
!                      12||
!                       13|
!                        14
!     str(1:1)
!        -  regular file 
!        l  symbolic link 
!        d  directory 
!        b  block device 
!        c  character device 
!        p  FIFO special file  
!        s  Socket file  
!     str(12:12)
!        U  set-user-ID on execute bit
!        -  not set 
!     str(13:13)
!        G  set-group-ID on execute bit
!        -  not set 
!     str(14:14)
!        S  set sticky bit
!        -  not set 
!
!-----------------------------------------------------------------------
!
!     dependence: i_utils.h
!
!     str must have length at least of 14, i.e. 14 bytes.
!
      subroutine funx_oct2fup ( ioct, str )
!
